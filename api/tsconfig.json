{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "ES2016"
        ],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@config/*": [
                "./src/config/*"
            ]
        }
    }
}