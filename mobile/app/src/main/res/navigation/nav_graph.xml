    android:id="@+id/nav_graph"
    app:startDestination="@id/activity_sign_in">

    <fragment
        android:id="@+id/fragment_list"
        android:name="com.example.todoapp.view.TodoListFragment"
        android:label="@string/todo_list"
        tools:layout="@layout/fragment_todo_list">
    </fragment>

    <activity android:id="@+id/activity_sign_in"
        android:name="com.example.todoapp.view.SignInActivity"
        android:label="Sign In"
        tools:layout="@layout/activity_sign_in"/>

    <activity android:id="@+id/activity_sign_up"
        android:name="com.example.todoapp.view.SignUpActivity"
        android:label="Sign Up"
        tools:layout="@layout/activity_sign_up"/>

