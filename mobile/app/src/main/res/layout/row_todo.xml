<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/open_todo"
        android:textSize="16sp"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_remove_guest"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_remove_guest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/remove_button"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="@id/text_description"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/text_description"
        app:layout_constraintRight_toLeftOf="@id/button_edit_guest"
        app:layout_constraintTop_toTopOf="@id/text_description"
        app:tint="@color/danger" />

    <ImageView
        android:id="@+id/button_edit_guest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/edit_button"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@id/button_remove_guest"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/button_remove_guest"
        app:layout_constraintRight_toLeftOf="@id/button_complete_guest"
        app:layout_constraintTop_toTopOf="@id/button_remove_guest"
        app:tint="@color/warning" />

    <ImageView
        android:id="@+id/button_complete_guest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/complete_button"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintBottom_toBottomOf="@id/button_edit_guest"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/button_edit_guest"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_edit_guest"
        app:tint="@color/success" />

</androidx.constraintlayout.widget.ConstraintLayout>