<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".view.SignUpActivity">

    <TextView
        android:id="@+id/text_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/image_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/ic_baseline_library_add_check_24"
        app:layout_constraintBottom_toTopOf="@id/full_name_sign_up"
        app:layout_constraintLeft_toLeftOf="@id/text_sign_up"
        app:layout_constraintRight_toRightOf="@id/text_sign_up"
        app:layout_constraintTop_toBottomOf="@id/text_sign_up" />

    <EditText
        android:id="@+id/full_name_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="@string/enter_your_full_name"
        android:textColor="@color/mint_cream"
        app:layout_constraintBottom_toTopOf="@id/email_sign_up"
        app:layout_constraintLeft_toLeftOf="@id/text_sign_up"
        app:layout_constraintRight_toRightOf="@id/text_sign_up"
        app:layout_constraintTop_toBottomOf="@id/image_logo" />

    <EditText
        android:id="@+id/email_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="@string/enter_your_e_mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/mint_cream"
        app:layout_constraintBottom_toTopOf="@id/password_sign_up"
        app:layout_constraintLeft_toLeftOf="@id/full_name_sign_up"
        app:layout_constraintRight_toRightOf="@id/full_name_sign_up"
        app:layout_constraintTop_toBottomOf="@id/full_name_sign_up" />

    <EditText
        android:id="@+id/password_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="10dp"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:textColor="@color/mint_cream"
        app:layout_constraintBottom_toBottomOf="@id/button_save_sign_up"
        app:layout_constraintLeft_toLeftOf="@id/email_sign_up"
        app:layout_constraintRight_toRightOf="@id/email_sign_up"
        app:layout_constraintTop_toBottomOf="@id/email_sign_up" />

    <Button
        android:id="@+id/button_save_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/yale_blue"
        android:text="@string/create_account"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/text_have_an_account_sign_in"
        app:layout_constraintLeft_toLeftOf="@id/password_sign_up"
        app:layout_constraintRight_toRightOf="@id/password_sign_up"
        app:layout_constraintTop_toBottomOf="@id/password_sign_up" />

    <TextView
        android:id="@+id/text_have_an_account_sign_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account_sign_in"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/button_save_sign_up"
        app:layout_constraintRight_toRightOf="@id/button_save_sign_up"
        app:layout_constraintTop_toBottomOf="@id/button_save_sign_up" />

</androidx.constraintlayout.widget.ConstraintLayout>